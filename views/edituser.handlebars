<h1>Editando: {{user.name}}</h1>

<div class="form_container">
    <form action="/users/update" method="POST" class="form">
        <input type="hidden" name="id" value="{{user.id}}" >
        <div class="form_control">
            <label for="name">Nome: </label>
            <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}" required>
        </div>
        <div class="form_control">
            <label for="occupation">Profissão: </label>
            <input type="text" name="occupation" placeholder="Digite a profissão do usuário" value="{{user.occupation}}" required>
        </div>
        <div class="form-control">
            <label for="date_of_birth">Data de Nascimento: </label>
            <input type="date" name="date_of_birth" value="{{user.date_of_birth}}" required>
        </div>
        <div class="form-control form-checkbox">
            <input type="checkbox" name="newsletter" {{#if user.newsletter}}checked{{/if}}>
            <label for="newsletter">Enviar promoções? </label>
        </div>
        <div class="form-btn">
            <input type="submit" value="Atualizar dados">
        </div>
    </form>


    <form action="/address/create" method="POST" class="form_address">
        <legend>Endereços</legend>
            <input type="hidden" name="UserId" value="{{user.id}}" required>
        <div class="form_control">
            <label for="street">Rua:</label>
            <input type="text" id="street" name="street" placeholder="Digite a rua" required>
            <span class="error-message" id="error-street" style="display: none;">Por favor, preencha a rua.</span>
        </div>
        <div class="form_control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o número da residência" required>
        </div>
        <div class="form_control">
             <label for="city">Cidade:</label>
             <input type="text" name="city" placeholder="Digite a cidade" required>
        </div>

        <div class="form-btn">
             <input type="submit" value="Incluir endereço">
        </div>
    </form>

</div>